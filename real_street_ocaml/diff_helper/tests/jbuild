(executable
 ((name test_runner)
  (modules (test_runner))
  (libraries (
              parsers
              transformers
              ppx_inline_test.runner.lib ppx_expect.evaluator ppx_inline_test.runtime-lib))))

(alias
 ((name    runtest-parser)
  (deps    (test_runner.exe))
  (action  (bash "
pwd
ln -s ../lib lib
./test_runner.exe inline-test-runner transformers -verbose
./test_runner.exe inline-test-runner diffp4 -verbose
./test_runner.exe inline-test-runner diffgit -verbose
./test_runner.exe inline-test-runner lcov -verbose
           "))
  )
)

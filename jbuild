(executable
 ((name test_runner)
  (modules (test_runner))
  (libraries (lc cw
   ppx_inline_test.runner.lib ppx_expect.evaluator ppx_inline_test.runtime-lib))))

(alias
 ((name    runlc)
  (deps    (test_runner.exe))
  (action  (run ${<} inline-test-runner lc -verbose)
  )
 )
)

(alias
 ((name    runcw)
  (deps    (test_runner.exe))
  (action  (run ${<} inline-test-runner cw -verbose)
  )
 )
)
